@{
    ViewBag.Title = "Home Page";
    //Layout = null;
}
@section styles
{
    @*<link href="~/Content/Sidebar.css" rel="stylesheet" />*@

    <link href="//cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css" rel="stylesheet" />

